pipeline { 
    agent any
    stages {
        stage('Clone Git') {
            steps {
                git 'https://github.com/Pankaj50000/Jenkins.git'
            }
        }
        stage('Build Code') {
            steps {
                sh "chmod u+x prog1.py"
                sh "./prog1.py"
            }
        }
     stage('Test Code') {
            steps {
                sh "chmod u+x test.py"
                sh "./test.py"
            }
        }
    } 
}
stage('Ansible Deployment') {
             steps {
                    ansible-playbook installation: 'Ansible', playbook: 'deploy-playbook.yml'
             }
         }
